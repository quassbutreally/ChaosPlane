<Page
    x:Class="ChaosPlane.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChaosPlane.Views"
    xmlns:vm="using:ChaosPlane.ViewModels"
    xmlns:models="using:ChaosPlane.Models"
    Background="{StaticResource CpBgBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />   <!-- page header -->
            <RowDefinition Height="*" />      <!-- content -->
        </Grid.RowDefinitions>

        <!-- ── Page header ───────────────────────────────────────────────── -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20" Spacing="12">
            <TextBlock Text="DASHBOARD"
                       FontFamily="Consolas"
                       FontSize="{StaticResource CpFontSize2xl}"
                       FontWeight="Bold"
                       CharacterSpacing="100"
                       Foreground="{StaticResource CpAmberBrush}" />
            <TextBlock Text="// LIVE SESSION"
                       FontFamily="Consolas"
                       FontSize="{StaticResource CpFontSizeLg}"
                       Foreground="{StaticResource CpTextDimBrush}"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,4" />
        </StackPanel>

        <!-- ── Three-column layout ───────────────────────────────────────── -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="280" />   <!-- active failures -->
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" MinWidth="260" />   <!-- recent log -->
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="280" />                <!-- manual trigger -->
            </Grid.ColumnDefinitions>

            <!-- ── Active failures ───────────────────────────────────────── -->
            <Border Grid.Column="0" Style="{StaticResource CpCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="ACTIVE FAILURES"
                                   Style="{StaticResource CpSectionHeaderStyle}"
                                   Margin="0" />
                        <Border Grid.Column="1"
                                Background="{StaticResource CpAmberDimBrush}"
                                CornerRadius="2"
                                Padding="8,2">
                            <TextBlock Text="{x:Bind ViewModel.ActiveFailureCount, Mode=OneWay}"
                                       FontFamily="Consolas"
                                       FontSize="{StaticResource CpFontSizeSm}"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource CpAmberBrush}" />
                        </Border>
                    </Grid>

                    <!-- Active failure list -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{x:Bind ViewModel.ActiveFailures}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:ActiveFailureViewModel">
                                    <Border Style="{StaticResource CpCardStyle}"
                                            Margin="0,0,0,8"
                                            Padding="12">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <!-- Failure name + tier badge -->
                                            <Grid Grid.Row="0" Margin="0,0,0,4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                           Text="{x:Bind Name}"
                                                           FontFamily="Consolas"
                                                           FontSize="{StaticResource CpFontSizeSm}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource CpTextBrush}"
                                                           TextWrapping="Wrap" />
                                                <TextBlock Grid.Column="1"
                                                           Text="{x:Bind TierLabel}"
                                                           FontFamily="Consolas"
                                                           FontSize="{StaticResource CpFontSizeXs}"
                                                           Foreground="{StaticResource CpAmberBrush}"
                                                           Margin="8,0,0,0" />
                                            </Grid>

                                            <!-- Redeemed by + time -->
                                            <StackPanel Grid.Row="1"
                                                        Orientation="Horizontal"
                                                        Spacing="8"
                                                        Margin="0,0,0,8">
                                                <TextBlock Text="{x:Bind RedeemedBy}"
                                                           Style="{StaticResource CpDimTextStyle}" />
                                                <TextBlock Text="·"
                                                           Style="{StaticResource CpDimTextStyle}" />
                                                <TextBlock Text="{x:Bind TimeAgo}"
                                                           Style="{StaticResource CpDimTextStyle}" />
                                            </StackPanel>

                                            <!-- Reset button -->
                                            <Button Grid.Row="2"
                                                    Content="RESET"
                                                    Style="{StaticResource CpGreenButtonStyle}"
                                                    HorizontalAlignment="Right"
                                                    Padding="12,4"
                                                    FontSize="{StaticResource CpFontSizeXs}"
                                                    Command="{x:Bind ResetCommand}" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Reset all -->
                    <Button Grid.Row="2"
                            Content="RESET ALL FAILURES"
                            Style="{StaticResource CpDangerButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,12,0,0"
                            Command="{x:Bind ViewModel.ResetAllCommand}" />
                </Grid>
            </Border>

            <!-- ── Recent log ─────────────────────────────────────────────── -->
            <Border Grid.Column="2" Style="{StaticResource CpCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="REDEMPTION LOG"
                               Style="{StaticResource CpSectionHeaderStyle}" />

                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{x:Bind ViewModel.RecentLog}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="vm:LogEntryViewModel">
                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{x:Bind TimeLabel}"
                                                   FontFamily="Consolas"
                                                   FontSize="{StaticResource CpFontSizeXs}"
                                                   Foreground="{StaticResource CpTextMutedBrush}"
                                                   Margin="0,0,10,0"
                                                   VerticalAlignment="Top" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{x:Bind Text}"
                                                   FontFamily="Consolas"
                                                   FontSize="{StaticResource CpFontSizeXs}"
                                                   Foreground="{StaticResource CpTextDimBrush}"
                                                   TextWrapping="Wrap" />
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>

            <!-- ── Manual trigger ─────────────────────────────────────────── -->
            <Border Grid.Column="4" Style="{StaticResource CpCardStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="MANUAL TRIGGER"
                               Style="{StaticResource CpSectionHeaderStyle}" />

                    <!-- Search box -->
                    <TextBox Grid.Row="1"
                             Style="{StaticResource CpTextBoxStyle}"
                             PlaceholderText="Search failures..."
                             Text="{x:Bind ViewModel.ManualSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,8" />

                    <Button Grid.Row="2"
                            Content="SEARCH"
                            Style="{StaticResource CpButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,0,0,12"
                            Command="{x:Bind ViewModel.SearchManualCommand}" />

                    <!-- Results list -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                        <ListView ItemsSource="{x:Bind ViewModel.ManualSearchResults}"
                                  SelectedItem="{x:Bind ViewModel.SelectedManualFailure, Mode=TwoWay}"
                                  Background="Transparent"
                                  SelectionMode="Single">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:ResolvedFailure">
                                    <StackPanel Padding="4,4">
                                        <TextBlock Text="{x:Bind Name}"
                                                   FontFamily="Consolas"
                                                   FontSize="{StaticResource CpFontSizeSm}"
                                                   Foreground="{StaticResource CpTextBrush}"
                                                   TextWrapping="Wrap" />
                                        <TextBlock Text="{x:Bind Category}"
                                                   Style="{StaticResource CpDimTextStyle}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="Padding" Value="4" />
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </ScrollViewer>

                    <!-- Trigger button -->
                    <Button Grid.Row="4"
                            Content="⚡ TRIGGER NOW"
                            Style="{StaticResource CpDangerButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,12,0,0"
                            Command="{x:Bind ViewModel.ManualTriggerCommand}" />
                </Grid>
            </Border>

        </Grid>
    </Grid>
</Page>
